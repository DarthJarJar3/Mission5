@{
    ViewData["Title"] = "MTG Tutoring Calculator – Mission 5";
}

<h1 class="mb-3">MTG Tutoring Price Calculator</h1>

<p>
    Use this quick calculator to figure out how much a Magic tutoring session with me would cost. I charge $20 dollars per hour.
</p>

<div class="card bg-dark border-light">
    <div class="card-body">
        <div class="mb-3">
            <label for="hoursNeeded" class="form-label text-light">Hours of tutoring you want</label>
            <input type="number" class="form-control" id="hoursNeeded" min="0" step="0.5" />
            <div id="hoursError" class="text-danger mt-1" style="display:none;">
                Please enter a positive number of hours.
            </div>
        </div>

        <div class="mb-3">
            <label for="hourlyRate" class="form-label text-light">Rate per hour (USD)</label>
            <input type="text" class="form-control" id="hourlyRate" value="$20" readonly />
        </div>

        <div class="mb-3">
            <button id="btnCalculate" class="btn btn-primary">Calculate total</button>
        </div>

        <div class="mb-3">
            <label for="totalCost" class="form-label text-light">Total cost (USD)</label>
            <input type="text" class="form-control" id="totalCost" readonly />
        </div>

        <a asp-controller="Home" asp-action="Index" class="btn btn-link">
            &laquo; Back to home
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/tutorCalc.js"></script>
}
